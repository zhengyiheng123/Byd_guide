<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/material_grey_700</item>
        <item name="colorPrimary">@color/transparent</item>
        <item name="colorPrimaryDark">@color/material_black</item>
        <item name="colorAccent">@color/tool_bar_color</item>
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
        <!--<item name="colorAccent">@color/colorAccent</item>-->
    </style>
    <!--页面切换动画-->
    <style name="activityAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
    </style>
    <style name="MultipleStatusView"/>
    <style name="MultipleStatusView.Content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textColor">#a9b7b7</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="bottom_style">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@android:color/transparent</item>

        <item name="android:gravity">center</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@drawable/bottom_text_selector</item>
    </style>
    <!-- 等待Dialog -->
    <style name="MyDialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/my_dialog_bg</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <dimen name="spacing_micro">4dp</dimen>
    <dimen name="font_normal">15sp</dimen>
    <dimen name="side_letter_bar_width">36dp</dimen>

    <style name="LetterIndexTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">@dimen/side_letter_bar_width</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>
    <!--splashtheme-->
    <style name="ThemeSplash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@drawable/bg_launch</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!--splashtheme-->
    <style name="ThemeImage" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--popwindowStyle-->
    <style name="PopupWindowAnimation">
        <item name="android:windowEnterAnimation">@anim/popshow_anim</item>
        <item name="android:windowExitAnimation">@anim/pophidden_anim</item>
    </style>

    <!--popwindowStyle-->
    <style name="PopupdownToup">
        <item name="android:windowEnterAnimation">@anim/pophidden_anim</item>
        <item name="android:windowExitAnimation">@anim/popshow_anim</item>
    </style>


    <style name="myTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="actionBarTheme">@style/myTheme.actionBar</item>-->
        <item name="colorPrimary">@color/material_blue_500</item>
    </style>
</resources>
