<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:background="@drawable/bg_home_content_item"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_head"
        android:scaleType="fitXY"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:src="@mipmap/bg_head"
        />
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/iv_head"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The great hospital"
            android:textColor="@color/material_blueGrey_800"
            android:textSize="15sp"
            />
        <View
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_color"
            />
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/ic_hospitalpng"
                />
            <TextView
                android:textColor="@color/material_grey_700"
                android:layout_marginLeft="8dp"
                android:id="@+id/tv_h_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="社区医院"
                />
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_call_phone"
                />
            <TextView
                android:textColor="@color/material_grey_700"
                android:layout_marginLeft="8dp"
                android:id="@+id/tv_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12762"
                />
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/ic_loaction"
                />
            <TextView
                android:textColor="@color/material_grey_700"
                android:layout_marginLeft="8dp"
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="王府井南路"
                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>