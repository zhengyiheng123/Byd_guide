<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/include_details_title"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:background="@drawable/bg_home_content_item"
        android:layout_height="110dp">
        <ImageView
            android:id="@+id/iv_head"
            android:scaleType="fitXY"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:src="@mipmap/bg_head"
            />
        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_head"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="8dp"
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The great hospital"
                android:textColor="@color/material_blueGrey_800"
                android:textSize="15sp"
                />
            <LinearLayout
                android:paddingBottom="8dp"
                android:layout_alignParentBottom="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/ic_hospitalpng"
                    />
                <TextView
                    android:textColor="@color/material_grey_700"
                    android:layout_marginLeft="8dp"
                    android:id="@+id/tv_h_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="社区医院"
                    />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_call"
        android:padding="8dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_call"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_call_hos"
            />
        <TextView
            android:layout_toRightOf="@+id/iv_call"
            android:textColor="@color/material_grey_700"
            android:layout_marginLeft="8dp"
            android:id="@+id/tv_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12762"
            />
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_right_forward"
            />
    </RelativeLayout>
    <RelativeLayout
        android:background="@color/white"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_location"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_loaction"
            />
        <TextView
            android:layout_toRightOf="@+id/iv_location"
            android:textColor="@color/material_grey_700"
            android:layout_marginLeft="8dp"
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="王府井南路"
            />
        <ImageView
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_right_forward"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/ic_time"
                />
            <TextView
                android:layout_marginLeft="8dp"
                android:drawablePadding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开门时间"
                />
        </LinearLayout>

        <TextView
            android:layout_marginRight="28dp"
            android:id="@+id/tv_desc"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="萨克拉手机号发圣诞节发顺丰"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/ic_prience"
                />
            <TextView
                android:layout_marginLeft="8dp"
                android:drawablePadding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="过往经验"
                />
        </LinearLayout>

        <TextView
            android:layout_marginRight="28dp"
            android:id="@+id/tv_prience"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="萨克拉手机号发圣诞节发顺丰"
            />
    </LinearLayout>
</LinearLayout>