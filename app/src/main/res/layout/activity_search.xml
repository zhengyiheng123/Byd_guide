<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@color/tool_bar_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionBarSize">
        <ImageView
            android:layout_weight="0.1"
            android:layout_gravity="center_vertical"
            android:id="@+id/iv_back"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_zhongcan_back"
            android:layout_width="25dp"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_weight="0.5"
            android:layout_gravity="center_vertical"
            android:id="@+id/rl_search"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@drawable/shape_search"
            android:layout_width="200dp"
            android:layout_height="30dp">
            <ImageView
                android:layout_marginLeft="8dp"
                android:layout_centerVertical="true"
                android:id="@+id/iv_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/icon_search"/>
            <EditText
                android:layout_toRightOf="@+id/iv_search"
                android:layout_marginLeft="8dp"
                android:layout_centerVertical="true"
                android:cursorVisible="false"
                android:hint="请输入商户名称"
                android:textSize="14sp"
                android:textColorHint="@color/material_grey_400"
                android:background="@null"
                android:id="@+id/auto_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/iv_clear"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_clean_edit_text"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_search"
            android:layout_weight="0.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜索"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbarSize">
        <RelativeLayout
            android:id="@+id/rl_restaurant"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:textColor="@color/tool_bar_color"
                android:id="@+id/tv_restaurant"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="餐饮"
                />
            <View
                android:id="@+id/line_restaurant"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/tool_bar_color"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_attractions"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_attractions"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="景区"
                />
            <View
                android:id="@+id/line_attractions"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/background_color"
                />
        </RelativeLayout>
    </LinearLayout>
    <ScrollView
        android:scrollbars="none"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:elevation="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.example.asus.xyd_order.ui.ChildViewPager
            android:focusable="true"
            android:id="@+id/register_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </ScrollView>
</LinearLayout>