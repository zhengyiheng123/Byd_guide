<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    >
<ImageView
    android:layout_margin="8dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@mipmap/icon_zhongcan_back"
    android:id="@+id/iv_back" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_back"
        android:layout_alignParentStart="true"
        android:layout_marginTop="82dp"
        android:id="@+id/linearLayout3"
        android:layout_alignParentLeft="true">
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/shape_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:textColor="@color/white"
            android:inputType="textEmailAddress"
            android:id="@+id/et_username"
            android:textSize="14sp"
            android:padding="16dp"
            android:drawablePadding="16dp"
            android:textColorHint="@color/white"
            android:hint="请输入手机号或邮箱账号"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/ic_account"
            android:background="@null"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/material_yellow_500"
            />
        <EditText
            android:textColor="@color/white"
            android:inputType="textPassword"
            android:id="@+id/et_password"
            android:textSize="14sp"
            android:padding="16dp"
            android:drawablePadding="16dp"
            android:textColorHint="@color/white"
            android:hint="请输入密码"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/ic_password"
            android:background="@null"/>
    </LinearLayout>

        <CheckBox
            android:id="@+id/cb_remeber"
            android:textColor="@color/white"
            android:layout_marginLeft="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="记住密码"
            />
        <Button
            android:id="@+id/btn_login"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:textColor="@color/white"
            android:background="@drawable/shape_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="登录"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_marginTop="16dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout3"
        >
        <TextView
            android:id="@+id/tv_forget"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码？"
            />
        <TextView
            android:id="@+id/tv_register"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
</RelativeLayout>