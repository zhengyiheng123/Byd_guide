<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/include_details_title"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@color/white"
        >
        <TextView
            android:textSize="15dp"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="停车场:"
            />
            <GridView
                android:listSelector="@color/transparent"
                android:horizontalSpacing="16dp"
                android:choiceMode="multipleChoice"
                android:numColumns="3"
                android:cacheColorHint="@color/transparent"
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/gd_park"
                />
        <View
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/line_color"
            />
        <TextView
            android:textSize="15dp"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人均价格:"
            />

        <com.example.asus.xyd_order.ui.RadioGroupEx
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:button="@null"
                android:text="不限"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/radiobutton_bg"
                android:textColor="@color/radiobutton_text_color"
                />
            <RadioButton
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:button="@null"
                android:text="0-15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/radiobutton_bg"
                android:textColor="@color/radiobutton_text_color"
                android:layout_marginLeft="8dp" />
            <RadioButton
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:button="@null"
                android:text="15-30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/radiobutton_bg"
                android:textColor="@color/radiobutton_text_color"
                android:layout_marginLeft="8dp" />
            <RadioButton
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:button="@null"
                android:text="30-45"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/radiobutton_bg"
                android:textColor="@color/radiobutton_text_color"
                />
        </com.example.asus.xyd_order.ui.RadioGroupEx>
        <!--</com.example.asus.xyd_order.ui.FlowLayout>-->

        <View
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/line_color"
            />
        <TextView
            android:textSize="15dp"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="座位数:"
            />

        <!--<com.example.asus.xyd_order.ui.FlowLayout-->
        <!--android:paddingBottom="16dp"-->
        <!--android:layout_marginTop="8dp"-->
        <!--android:focusable="true"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:gravity="center"-->
        <!--android:orientation="horizontal">-->
        <com.example.asus.xyd_order.ui.RadioGroupEx
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton

                android:layout_marginTop="8dp"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:layout_width="wrap_content"
                android:background="@drawable/radiobutton_bg"
                android:button="@null"
                android:gravity="center"
                android:text="不限"
                android:textColor="@color/radiobutton_text_color"
                android:textSize="14sp" />

            <RadioButton

                android:layout_marginTop="8dp"
                android:enabled="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@drawable/radiobutton_bg"
                android:button="@null"
                android:gravity="center"
                android:text="0-30"
                android:textColor="@color/radiobutton_text_color"
                android:textSize="14sp"
                android:layout_marginLeft="10dp" />

            <RadioButton
                android:layout_marginTop="8dp"
                android:enabled="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@drawable/radiobutton_bg"
                android:button="@null"
                android:gravity="center"
                android:text="30-60"
                android:textColor="@color/radiobutton_text_color"
                android:textSize="14sp"
                android:layout_marginLeft="10dp" />
            <RadioButton
                android:layout_marginTop="8dp"
                android:enabled="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/radiobutton_bg"
                android:button="@null"
                android:gravity="center"
                android:text="60-100"
                android:textColor="@color/radiobutton_text_color"
                android:textSize="14sp" />
        </com.example.asus.xyd_order.ui.RadioGroupEx>
        <!--</com.example.asus.xyd_order.ui.FlowLayout>-->
        <LinearLayout
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_gravity="bottom"
            android:background="@color/background_color"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:text="重置"
                android:textColor="@color/material_grey_700"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/tool_bar_color"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>