<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:elevation="1dp"
    android:layout_height="wrap_content">
    <TextView
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="团号："
        android:id="@+id/tv_groupnum" />
    <TextView
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:textColor="@color/material_yellow_600"
        android:background="@drawable/shape_catchorders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="抢单"
        android:id="@+id/tv_catch"
        android:layout_marginTop="4dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp" />
    <LinearLayout
        android:paddingTop="16dp"
        android:paddingLeft="8dp"
        android:layout_marginTop="8dp"
        android:paddingBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/material_grey_50"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_below="@+id/tv_groupnum"
        android:id="@+id/linearLayout2">
        <TextView
            android:id="@+id/tv_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            />
        <View
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/line_color"
            />
        <TextView
            android:id="@+id/tv_service_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            />
        <View
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/line_color"
            />
        <TextView
            android:id="@+id/tv_car_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        />
        <View
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/line_color"
            />
        <TextView
            android:id="@+id/tv_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            />
    </LinearLayout>
    <TextView
        android:paddingBottom="12dp"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:background="@color/material_grey_50"
        android:layout_below="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="开始："
        android:layout_alignStart="@+id/linearLayout2"
        android:layout_alignEnd="@+id/linearLayout2"
        android:id="@+id/tv_time"
        android:layout_alignLeft="@+id/linearLayout2"
        android:layout_alignRight="@+id/linearLayout2" />
    <TextView
        android:id="@+id/tv_ord_num"
        android:padding="8dp"
        android:layout_below="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="订单号:"
        android:layout_alignStart="@+id/tv_time"
        android:layout_alignLeft="@+id/tv_time" />
</RelativeLayout>