<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:descendantFocusability="blocksDescendants"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/iv_img"
        android:layout_width="80dp"
        android:layout_height="60dp"
        />
    <LinearLayout
        android:layout_marginLeft="8dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_img"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/material_grey_700"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_name"
            android:text="---"
            />
        <TextView
            android:visibility="visible"
            android:layout_marginTop="16dp"
            android:textColor="@color/gray_deep"
            android:textSize="13sp"
            android:id="@+id/tv_peer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="---/起"
            />
    </LinearLayout>
    <!--<View-->
        <!--android:layout_toLeftOf="@+id/rl_check"-->
        <!--android:layout_marginRight="8dp"-->
        <!--android:layout_marginTop="4dp"-->
        <!--android:layout_marginBottom="4dp"-->
        <!--android:layout_width="1dp"-->
        <!--android:layout_height="match_parent"-->
        <!--android:background="@color/line_color"-->
        <!--/>-->
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_check"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true">
        <TextView
            android:background="@drawable/shape_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:background="@drawable/ic_choose"
            android:id="@+id/tv_check"
            android:layout_width="20dp"
            android:layout_height="20dp" />
    </RelativeLayout>
    </RelativeLayout>
<View
    android:visibility="gone"
    android:layout_marginTop="8dp"
    android:layout_below="@+id/rl_content"
    android:id="@+id/view_line"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/line_color"
    />
    <com.example.asus.xyd_order.ui.RadioGroupEx
        android:visibility="gone"
        android:layout_marginTop="8dp"
        android:id="@+id/radio"
        android:layout_below="@+id/view_line"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.example.asus.xyd_order.ui.RadioGroupEx>
    <TextView
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
            android:gravity="center"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:text="预定"
        android:textColor="@color/white"
        android:background="@drawable/shape_tuancan_order"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true" />
</RelativeLayout>