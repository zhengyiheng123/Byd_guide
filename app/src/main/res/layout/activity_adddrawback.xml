<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">
<include layout="@layout/include_details_title"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="感谢您补充宝贵的经验"
        android:padding="8dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >
        <TextView
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退税城市："
            android:id="@+id/textView13" />
        <Spinner
            android:id="@+id/country_spinner"
            android:textSize="14sp"
            android:textColor="@color/material_grey_800"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView13"
            android:layout_toRightOf="@+id/textView13" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >
        <TextView
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退税地址："
            android:id="@+id/tv_back_address" />
        <EditText
            android:id="@+id/et_address"
            android:textSize="14sp"
            android:textColor="@color/material_grey_800"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/tv_back_address"
            android:layout_toRightOf="@+id/tv_back_address" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >
        <TextView
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退税点名称："
            android:id="@+id/textView15" />
        <EditText
            android:id="@+id/et_area"
            android:textSize="14sp"
            android:textColor="@color/material_grey_800"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView15" />
    </RelativeLayout>
    <EditText
        android:id="@+id/et_desc"
        android:padding="8dp"
        android:hint="具体说明"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:gravity="left|top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="6"
        android:background="@color/white"
        />
    <LinearLayout
        android:padding="8dp"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:drawableRight="@mipmap/bg_add_pic"
            android:id="@+id/tv_select_tuishui"
            android:textSize="17sp"
            android:text="选择退税点图片："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/iv_tuishui"
            />
    </LinearLayout>
    <LinearLayout
        android:padding="8dp"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:drawableRight="@mipmap/bg_add_pic"
            android:id="@+id/tv_select"
            android:textSize="17sp"
            android:text="选择盖章点图片："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/iv_stamp"
            />
    </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>