<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="6dp"
    android:paddingTop="6dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:gravity="center_vertical"
    android:background="@color/white"
    >
<TextView
    android:textColor="@color/material_grey_800"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="2017.8.8 莫扎特乐团交响乐"
    android:id="@+id/tv_mer_name" />
    <TextView
        android:textColor="@color/material_yellow_700"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="演出时间：9:00-11:00"
        android:layout_below="@+id/tv_mer_name"
        android:layout_alignParentStart="true"
        android:id="@+id/tv_mer_time"
        android:layout_alignParentLeft="true" />
    <View
        android:layout_marginRight="8dp"
        android:background="@color/line_color"
        android:layout_width="1dp"
        android:layout_height="50dp"
        android:id="@+id/view"
        android:layout_alignTop="@+id/tv_mer_name"
        android:layout_toStartOf="@+id/ll_order"
        android:layout_toLeftOf="@+id/ll_order" />
    <LinearLayout
        android:layout_centerVertical="true"
        android:id="@+id/ll_order"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true">
        <TextView
            android:gravity="center"
            android:textSize="14sp"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:textColor="@color/material_blue_500"
            android:background="@drawable/shape_cancel_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预定"
            android:id="@+id/textView8"
            />
        <TextView
            android:visibility="gone"
            android:textColor="@color/material_yellow_700"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="余票12张"
            android:id="@+id/textView7" />
    </LinearLayout>
</RelativeLayout>