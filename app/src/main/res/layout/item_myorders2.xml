<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/rl_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:gravity="center_vertical"
    android:padding="8dp"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="订单类型"
        />
    <TextView
        android:id="@+id/tv_ord_num"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="订单号"
        />
</RelativeLayout>

    <RelativeLayout
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:layout_marginRight="6dp"
            android:id="@+id/iv_img"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="4dp"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_zhongcan_tu" />

        <TextView
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/iv_img"
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--" />
        <TextView
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/iv_img"
            android:id="@+id/tv_routename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="---" />
    </RelativeLayout>

    <TextView
        android:layout_marginLeft="8dp"
        android:id="@+id/tv_tel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="联系方式" />

    <TextView
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="联系方式"/>
    <TextView
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:id="@+id/tv_ord_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="联系方式"/>
    <TextView
        android:layout_marginRight="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_peer"
        android:gravity="right"
        android:text="总计"
        />
    <LinearLayout
        android:layout_marginTop="6dp"
        android:background="@color/white"
        android:gravity="right"
        android:layout_below="@+id/ll_content"
        android:padding="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="8dp"
        android:id="@+id/linearLayout4">
        <TextView
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="@color/tool_bar_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:id="@+id/cancel"
            android:background="@drawable/shape_order"
            />
        <TextView
            android:layout_marginLeft="8dp"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="@color/tool_bar_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改"
            android:background="@drawable/shape_order"
            android:id="@+id/modify"
            />
        <TextView
            android:visibility="gone"
            android:layout_marginLeft="8dp"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="@color/tool_bar_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="存为样本"
            android:background="@drawable/shape_order"
            android:id="@+id/store"
            />
        <TextView
            android:layout_marginLeft="8dp"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="@color/tool_bar_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认完成"
            android:background="@drawable/shape_order"
            android:id="@+id/finished"
            />
        <TextView
            android:layout_marginLeft="8dp"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="@color/tool_bar_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退款"
            android:background="@drawable/shape_order"
            android:id="@+id/refunds"
            />
        <TextView
            android:visibility="gone"
            android:layout_marginLeft="8dp"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="@color/tool_bar_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="填写意见单"
            android:background="@drawable/shape_order"
            android:id="@+id/write"
            />
        <TextView
            android:layout_marginLeft="8dp"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="@color/tool_bar_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评论"
            android:background="@drawable/shape_order"
            android:id="@+id/comment"
            />
        <TextView
            android:layout_marginLeft="8dp"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="@color/tool_bar_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付"
            android:background="@drawable/shape_order"
            android:id="@+id/pay"
            />
        <TextView
            android:textColor="@color/tool_bar_color"
            android:layout_marginLeft="8dp"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商家取消"
            android:id="@+id/cancel_state"
            android:background="@drawable/shape_order_noboder"
            />
    </LinearLayout>
</LinearLayout>