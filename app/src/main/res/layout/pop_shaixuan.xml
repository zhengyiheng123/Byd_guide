<com.example.asus.xyd_order.ui.RadioGroupEx
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.example.asus.xyd_order.ui.FilterButton
        android:gravity="center"
        android:id="@+id/tv_nolimit"
        android:layout_marginTop="8dp"
        android:button="@null"
        android:text="不限"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_filter"
        android:textColor="@color/radiobutton_text_color"
        />
    <com.example.asus.xyd_order.ui.FilterButton
        android:gravity="center"
        android:id="@+id/tv_daba"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:button="@null"
        android:text="大巴停车场"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_filter"
        android:textColor="@color/radiobutton_text_color"
        />
    <com.example.asus.xyd_order.ui.FilterButton
        android:gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:button="@null"
        android:id="@+id/tv_parking"
        android:text="停车场"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_filter"
        android:textColor="@color/radiobutton_text_color"
        />
    <com.example.asus.xyd_order.ui.FilterButton
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:button="@null"
        android:id="@+id/tv_temp"
        android:text="大巴临时上下客"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_filter"
        android:textColor="@color/radiobutton_text_color"
        />
</com.example.asus.xyd_order.ui.RadioGroupEx>
    <!--</com.example.asus.xyd_order.ui.FlowLayout>-->
    <View
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/line_color"
        />
    <TextView
        android:textSize="15dp"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="人均价格:"
        />
    <LinearLayout
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <EditText
            android:inputType="numberDecimal"
            android:id="@+id/et_minprice"
            android:hint="最低价"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:background="@color/white"
            />
        <TextView
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="——"
            />
        <EditText
            android:inputType="numberDecimal"
            android:id="@+id/et_maxprice"
            android:hint="最高价"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:background="@color/white"
            />
    </LinearLayout>
    <!--</com.example.asus.xyd_order.ui.FlowLayout>-->

<View
    android:layout_marginTop="8dp"
    android:layout_width="match_parent"
    android:layout_height="0.1dp"
    android:background="@color/line_color"
    />
    <TextView
        android:visibility="gone"
        android:textSize="15dp"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="座位数:"
        />

    <!--<com.example.asus.xyd_order.ui.FlowLayout-->
        <!--android:paddingBottom="16dp"-->
        <!--android:layout_marginTop="8dp"-->
        <!--android:focusable="true"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:gravity="center"-->
        <!--android:orientation="horizontal">-->
<com.example.asus.xyd_order.ui.RadioGroupEx
    android:layout_marginBottom="8dp"
    android:visibility="gone"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <RadioButton

            android:layout_marginTop="8dp"
            android:layout_height="wrap_content"
            android:enabled="true"
            android:layout_width="wrap_content"
            android:background="@drawable/radiobutton_bg"
            android:button="@null"
            android:gravity="center"
            android:text="不限"
            android:textColor="@color/radiobutton_text_color"
            android:textSize="14sp" />

        <RadioButton

            android:layout_marginTop="8dp"
            android:enabled="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="@drawable/radiobutton_bg"
            android:button="@null"
            android:gravity="center"
            android:text="0-30"
            android:textColor="@color/radiobutton_text_color"
            android:textSize="14sp" />

        <RadioButton
            android:layout_marginTop="8dp"
            android:enabled="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="@drawable/radiobutton_bg"
            android:button="@null"
            android:gravity="center"
            android:text="30-60"
            android:textColor="@color/radiobutton_text_color"
            android:textSize="14sp" />
        <RadioButton
            android:layout_marginTop="8dp"
            android:enabled="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/radiobutton_bg"
            android:button="@null"
            android:gravity="center"
            android:text="60-100"
            android:textColor="@color/radiobutton_text_color"
            android:textSize="14sp" />
</com.example.asus.xyd_order.ui.RadioGroupEx>
    <!--</com.example.asus.xyd_order.ui.FlowLayout>-->
    <LinearLayout
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_gravity="bottom"
        android:background="@color/background_color"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_reset"
            android:gravity="center"
            android:text="重置"
            android:textColor="@color/material_grey_700"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_confirm"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/tool_bar_color"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>