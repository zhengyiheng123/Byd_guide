<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_title"
        android:background="@color/tool_bar_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionBarSize">
        <ImageView
            android:layout_weight="0.1"
            android:layout_gravity="center_vertical"
            android:id="@+id/iv_back"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_zhongcan_back"
            android:layout_width="25dp"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_weight="0.5"
            android:layout_gravity="center_vertical"
            android:id="@+id/rl_search"
            android:background="@drawable/shape_search"
            android:layout_width="200dp"
            android:layout_height="30dp">
            <ImageView
                android:layout_marginLeft="8dp"
                android:layout_centerVertical="true"
                android:id="@+id/iv_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/icon_search"/>
            <EditText
                android:dropDownVerticalOffset="5dp"
                android:completionThreshold="1"
                android:textColor="@color/material_grey_700"
                android:layout_toRightOf="@+id/iv_search"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_centerVertical="true"
                android:cursorVisible="true"
                android:hint="离我最近"
                android:textSize="14sp"
                android:textColorHint="@color/material_grey_400"
                android:background="@null"
                android:id="@+id/auto_text"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/iv_clear"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_clean_edit_text"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_search"
            android:layout_weight="0.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜索"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="历史记录"
            />
        <ImageView
            android:id="@+id/iv_delete"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_delete"
            />
    </RelativeLayout>
    <com.example.asus.xyd_order.ui.FlowLayout
        android:id="@+id/flow_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/country_lvcountry"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:divider="@null"
            android:scrollbars="none" />

        <TextView
            android:id="@+id/dialog"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:background="#5500BFFF"
            android:gravity="center"
            android:text="A"
            android:textColor="@android:color/white"
            android:textSize="36sp"
            android:visibility="gone"
            tools:visibility="visible" />

        <com.example.asus.xyd_order.selectcity.SideBar
            android:id="@+id/sidrbar"
            android:layout_marginBottom="24dp"
            android:layout_width="30.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            />
    </FrameLayout>

</LinearLayout>