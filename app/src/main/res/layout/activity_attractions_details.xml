<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/include_details_title"/>
    <ScrollView
        android:focusableInTouchMode="true"
        android:id="@+id/scroll"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            >
            <com.recker.flybanner.FlyBanner
                android:background="@drawable/bg_attractions"
                android:id="@+id/flybanner"
                android:layout_width="match_parent"
                android:layout_height="150dp"/>
            <RelativeLayout
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_scene_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="维也纳金色大厅"
                    />
                <TextView
                    android:visibility="gone"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.1km"
                    android:layout_alignParentRight="true" />
                </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_color"
                />
            <RelativeLayout
                android:id="@+id/rl_map"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_address"
                    android:drawablePadding="4dp"
                    android:drawableLeft="@mipmap/ic_loaction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地址:adasdadas"
                    />
                <ImageView

                    android:background="@drawable/ic_right_forward"
                    android:layout_alignParentEnd="true"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>
            <include layout="@layout/include_calender"/>
            <RelativeLayout
                android:visibility="gone"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_centerVertical="true"
                    android:drawablePadding="4dp"
                    android:drawableLeft="@mipmap/ic_notice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="票价"
                    />
            </RelativeLayout>
            <View
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_color"
                />
            <com.example.asus.xyd_order.ui.MyListView
                android:paddingLeft="12dp"
                android:listSelector="@color/transparent"
                android:paddingRight="12dp"
                android:id="@+id/lv_ticketprice"
                android:divider="@color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/material_grey_50"
                />
            <RelativeLayout
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:drawablePadding="4dp"
                    android:drawableLeft="@mipmap/ic_notice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="营业时间描述"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_color"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                />
            <TextView
                android:id="@+id/tv_run_time_desc"
                android:background="@color/white"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:paddingLeft="32dp"
                android:text="------"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/material_grey_50"
                />
            <RelativeLayout
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:drawablePadding="4dp"
                    android:drawableLeft="@mipmap/ic_instructions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订票说明"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_color"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                />
            <TextView
                android:background="@color/white"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:paddingLeft="32dp"
                android:text="----"
                android:id="@+id/tv_order_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/material_grey_50"
                />
            <RelativeLayout
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_message_count"
                    android:drawablePadding="4dp"
                    android:drawableLeft="@mipmap/ic_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="同行留言"
                    />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_leave_message"
                    android:text="我要留言"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>
            <LinearLayout
                android:paddingTop="8dp"
                android:background="@color/white"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="总体评价："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RatingBar
                    android:rating="0"
                    android:max="5"
                    android:id="@+id/ratingbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:progressTint="@color/material_red_A400"
                    android:progressBackgroundTint="@color/material_grey_600"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_color"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                />
            <com.example.asus.xyd_order.ui.MyListView
                android:padding="8dp"
                android:dividerHeight="16dp"
                android:divider="@color/transparent"
                android:background="@color/white"
                android:scrollbars="none"
                android:id="@+id/lv_pinglun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>