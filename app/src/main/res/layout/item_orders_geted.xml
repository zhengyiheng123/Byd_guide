<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <TextView
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="团号：---"
        android:id="@+id/tv_tuan_order" />
    <TextView
        android:layout_marginTop="8dp"
        android:layout_alignParentRight="true"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="----"
        android:id="@+id/tv_ordnum" />
    <LinearLayout
        android:paddingTop="16dp"
        android:paddingLeft="8dp"
        android:layout_marginTop="8dp"
        android:paddingBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/material_grey_50"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_below="@+id/tv_tuan_order"
        android:id="@+id/linearLayout2">
        <TextView
            android:id="@+id/tv_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="---"
            />
        <View
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/line_color"
            />
        <TextView
            android:id="@+id/tv_lvxi_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            />
        <View
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/line_color"
            />
        <TextView
            android:id="@+id/tv_sit_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="---"
        />
        <View
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/line_color"
            />
        <TextView
            android:id="@+id/tv_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="无等级限制"
            />
    </LinearLayout>
    <TextView
        android:paddingBottom="12dp"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:background="@color/material_grey_50"
        android:layout_below="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="----"
        android:layout_alignStart="@+id/linearLayout2"
        android:layout_alignEnd="@+id/linearLayout2"
        android:id="@+id/tv_time"
        android:layout_alignLeft="@+id/linearLayout2"
        android:layout_alignRight="@+id/linearLayout2" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp"
        android:layout_below="@+id/tv_time"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:id="@+id/linearLayout4"
        android:layout_alignParentRight="true"
        >
        <TextView
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="@color/demand_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:id="@+id/cancel"
            android:background="@drawable/shape_order"
            />
        <TextView
            android:layout_marginLeft="8dp"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="@color/demand_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认完成"
            android:background="@drawable/shape_order"
            android:id="@+id/finished"
            />
    </LinearLayout>
    <TextView
        android:layout_marginBottom="4dp"
        android:layout_below="@+id/tv_time"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="4dp"
        android:layout_alignParentRight="true"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:background="@drawable/shape_order_noboder"
        android:textColor="@color/demand_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="---"
        android:id="@+id/tv_cancel_state"
        android:layout_marginRight="16dp"
        />
</RelativeLayout>