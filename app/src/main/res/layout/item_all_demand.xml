<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <TextView
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="团号：---"
        android:id="@+id/tv_tuan_order" />
    <LinearLayout
        android:paddingTop="16dp"
        android:paddingLeft="8dp"
        android:layout_marginTop="8dp"
        android:paddingBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/material_grey_50"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_below="@+id/tv_tuan_order"
        android:id="@+id/linearLayout2">
        <TextView
            android:singleLine="true"
            android:ellipsize="end"
            android:maxEms="6"
            android:id="@+id/tv_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="---"
            />
        <View
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/line_color"
            />
        <TextView
            android:id="@+id/tv_lvxi_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            />
        <View
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/line_color"
            />
        <TextView
            android:id="@+id/tv_sit_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="---"
        />
        <View
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/line_color"
            />
        <TextView
            android:id="@+id/tv_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            />
    </LinearLayout>
    <TextView
        android:paddingBottom="12dp"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:background="@color/material_grey_50"
        android:layout_below="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="----"
        android:layout_alignStart="@+id/linearLayout2"
        android:layout_alignEnd="@+id/linearLayout2"
        android:id="@+id/tv_time"
        android:layout_alignLeft="@+id/linearLayout2"
        android:layout_alignRight="@+id/linearLayout2" />
    <TextView
        android:textSize="12sp"
        android:padding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="订单号:----"
        android:id="@+id/tv_dingdan_num"
        android:layout_alignParentRight="true"
        />

    <LinearLayout
        android:padding="4dp"
        android:layout_below="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:id="@+id/linearLayout4"
        android:layout_alignParentRight="true">
        <TextView
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:visibility="gone"
            android:textColor="@color/demand_text"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="----"
            android:background="@drawable/shape_order_noboder"
            android:id="@+id/tv_cancel_state" />
        <TextView
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="@color/demand_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:id="@+id/cancel"
            android:background="@drawable/shape_order"
            />
        <TextView
            android:layout_marginLeft="8dp"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="@color/demand_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改"
            android:background="@drawable/shape_order"
            android:id="@+id/modify"
            />
        <TextView
            android:layout_marginLeft="8dp"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="@color/demand_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="存为样本"
            android:background="@drawable/shape_order"
            android:id="@+id/store"
            />
        <TextView
            android:layout_marginLeft="8dp"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="@color/demand_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认完成"
            android:background="@drawable/shape_order"
            android:id="@+id/finished"
            />
        <TextView
            android:layout_marginLeft="8dp"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="@color/demand_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="再发布一次"
            android:background="@drawable/shape_order"
            android:id="@+id/republish"
            />
        <TextView
            android:layout_marginLeft="8dp"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="@color/demand_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="填写意见单"
            android:background="@drawable/shape_order"
            android:id="@+id/write"
            />
    </LinearLayout>

</RelativeLayout>