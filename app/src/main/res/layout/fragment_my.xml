<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@color/transparent"
        android:layout_width="match_parent"
        android:layout_height="250dp">
        <RelativeLayout
            android:background="@mipmap/bg_head"
            android:layout_width="match_parent"
            android:layout_height="220dp">
            <com.example.asus.xyd_order.ui.CircleImageView
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:id="@+id/iv_head"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/ic_unauth"
                />
            <TextView
                android:clickable="true"
                android:id="@+id/tv_login"
                android:layout_marginTop="16dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/iv_head"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="立即登录"
                />
        </RelativeLayout>
<LinearLayout
    android:elevation="1dp"
    android:paddingTop="8dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:gravity="center_vertical"
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/shape_order_confirm"
    >
    <TextView
        android:drawablePadding="8dp"
        android:id="@+id/tv_opinion"
        android:gravity="center"
        android:drawableTop="@mipmap/ic_suggestion"
        android:text="意见单记录"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <View
        android:layout_margin="8dp"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/line_color"
        />
    <TextView
        android:drawablePadding="8dp"
        android:id="@+id/tv_account_journey"
        android:gravity="center"
        android:drawableTop="@mipmap/ic_date"
        android:text="我的行程"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <View
        android:layout_margin="8dp"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/line_color"
        />
    <TextView
        android:drawablePadding="8dp"
        android:id="@+id/tv_my_guide_circle"
        android:gravity="center"
        android:drawableTop="@mipmap/ic_guide_circle"
        android:text="我的导游圈"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
</LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_userinfo"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人资料"
            android:gravity="center"
            android:drawableLeft="@mipmap/ic_userinfo"
            android:drawablePadding="8dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_arrow_rigth_gray"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_my_collect"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的收藏"
            android:gravity="center"
            android:drawableLeft="@mipmap/ic_userinfo"
            android:drawablePadding="8dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_arrow_rigth_gray"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_suggestion"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="意见反馈"
            android:gravity="center"
            android:drawableLeft="@mipmap/ic_feedback"
            android:drawablePadding="8dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_arrow_rigth_gray"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_setting"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"
            android:drawableLeft="@mipmap/ic_setting"
            android:drawablePadding="8dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_arrow_rigth_gray"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_address_manager"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="管理收获地址"
            android:drawableLeft="@mipmap/ic_address"
            android:drawablePadding="8dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_arrow_rigth_gray"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>
</LinearLayout>